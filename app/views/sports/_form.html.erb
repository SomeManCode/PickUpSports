<%= form_for(@sport) do |f| %>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
    <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
    <div class="field">
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode %>
  </div>
  <div class="field">
    <%= f.label :needed %><br />
    <%= f.number_field :needed %>
  </div>
